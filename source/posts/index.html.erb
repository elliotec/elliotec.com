<div class="post">
  <article class="post-content">
    <h1>Posts</h1>
    <ul class="posts">
      <% page_articles.each_with_index do |article, i| %>
        <li>
          <h3><%= link_to article.title, article %></h3>
          <p id='date'><%= article.date.strftime('%B %d, %Y') %></p>
        </li>
      <% end %>
    </ul>
  </article>
</div>